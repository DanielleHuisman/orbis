{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["lint", "build"],
                "parallel": 2
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["lint", { "projects": ["@orbis-framework/core"], "target": "build" }, "^build"],
            "outputs": ["{projectRoot}/dist"]
        },
        "test": {
            "dependsOn": ["build"]
        }
    }
}
